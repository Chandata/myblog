<header class="masthead" style="background-image: url('/img/home-bg.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-auto">
        <div class="post-heading">
          {% if author %}
            <h2>{{ title }}</h2>
            <h3 class="subheading">{{ description }}</h3>
            <p class="meta">
              Posted by <span style="https://res.cloudinary.com/stuckonsap/image/upload/f_auto,q_auto,w_26,h_26,c_thumb,g_face/v1603564892/Chandan_outdoor_uk3ryb.jpg"></span>{{ author }} on {{date | formatDate}}
            </p>
          {% else %}
            <h1>{{ title }}</h1>
            <h2 class="subheading">{{ description }}</h2>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>
